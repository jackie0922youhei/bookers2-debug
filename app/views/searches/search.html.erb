<% if @range == '2' %>
  <h2>Books search for ~~~~</h2>
  <table class="table table-hover table-inverse">
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    <tbody>
      <% @book.each do |book| %>
        <tr>
          <td>
            <%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg") %>
          </td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
    <h2>Users search for ~~~~</h2>
    <table class="table table-hover table-inverse">
      <tr>
        <th></th>
        <th>Name</th>
        <th>Introduction</th>
      </tr>
      <tbody>
        <% @user.each do |user| %>
          <tr>
            <td>
              <%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg") %>
            </td>
            <td><%= user.name %></td>
            <td><%= user.introduction %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
 <% end %>